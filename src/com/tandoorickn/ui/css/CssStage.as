package com.tandoorickn.ui.css{	import com.tandoorickn.interfaces.ui.css.ICssSprite;	import com.tandoorickn.ui.css.core.CoreCssSprite;		import flash.display.DisplayObject;	import flash.display.Sprite;	import flash.display.Stage;	import flash.display.StageAlign;	import flash.display.StageScaleMode;	import flash.events.Event;
		public class CssStage extends Sprite	{		private var 	_stage				:Stage;		public var 		layout				:CssLayout;				public function CssStage(stage:Stage)		{			super();			this._stage 			= stage;			this.layout 			= new CssLayout();						this.initStage();		}				public function getLayer(index:uint):CoreCssSprite				{ 			return this.layout.getLayer(index); 		}				public function addCssObjectAt(cssObject:CoreCssSprite,name:String,index:uint):void		{			this.layout.addCssObjectAt(cssObject,name,index);			resizeHandler();		}				public function addCssSpriteAt(cssObject:ICssSprite,index:uint):void		{			this.layout.addCssObjectAt(cssObject as CoreCssSprite,cssObject.id,index);			resizeHandler();		}				override public function addChild(child:DisplayObject):DisplayObject		{			return this._stage.addChild(child);		}				override public function removeChild(child:DisplayObject):DisplayObject		{			return this._stage.removeChild(child);		}				override public function get width():Number		{			return this._stage.stageWidth;		}				override public function get height():Number		{			return this._stage.stageHeight;		}				public function refresh():void		{			this.resizeHandler();		}				private function resizeHandler(e:Event = null):void		{			this.layout.setSize(this.width,this.height);		}				private function initStage():void		{			this._stage.align = StageAlign.TOP_LEFT;			this._stage.scaleMode = StageScaleMode.NO_SCALE;						this.addChild(layout);			this._stage.addEventListener(Event.RESIZE, resizeHandler);			resizeHandler();		}	}}