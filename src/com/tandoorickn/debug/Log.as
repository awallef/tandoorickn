package  com.tandoorickn.debug{	import nl.acidcats.yalog.Yalog;		public class Log	{				public static const	TRACE:String				= "Log.TRACE";				public static const	SILENT:String				= "Log.SILENT";				public static const	CONSOLE:String				= "Log.CONSOLE";								public static var displayInfo:Boolean			= true;				public static var displayWarn:Boolean			= true;				public static var displayDebug:Boolean			= true;				public static var mode:String					= "Log.CONSOLE";				public static function debug(sender:String,...args):void 		{			var text:String = args.join(" ");			if(Log.mode == Log.CONSOLE)  Yalog.debug(text, sender);			if(Log.mode == Log.TRACE && Log.displayDebug)  	trace("[",sender,"]", text);		}		public static function info(sender:String,...args):void 		{			var text:String = args.join(" ");			if(Log.mode == Log.CONSOLE)  Yalog.info(text, sender);			if(Log.mode == Log.TRACE && Log.displayInfo) trace("[",sender, text," ( info ) ]");		}		public static function error(sender:String,...args):void 		{			var text:String = args.join(" ");			if(Log.mode == Log.CONSOLE)  Yalog.error(text, sender);			if(Log.mode == Log.TRACE) trace("** ERROR ** [",sender,"]", text);		}		public static function warn(sender:String,...args):void 		{			var text:String = args.join(" ");			if(Log.mode == Log.CONSOLE)  Yalog.warn(text, sender);			if(Log.mode == Log.TRACE && Log.displayWarn) trace("[",sender, text," ( warn ) ]");		}		public static function fatal(sender:String,...args):void 		{			var text:String = args.join(" ");			if(Log.mode == Log.CONSOLE)  Yalog.fatal(text, sender);			if(Log.mode == Log.TRACE) trace("!! FATAL !! [",sender,"]", text);		}	}	}